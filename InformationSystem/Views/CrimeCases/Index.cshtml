@model IEnumerable<InformationSystem.Data.Entity.CrimeCases>
@using InformationSystem.Data.Enum

@{
    ViewData["Title"] = "Index";
    if (ViewBag.IsAdmin)
        Layout = "~/Views/Shared/_Layout.cshtml";
    else if (ViewBag.IsBarangayOfficial)
        Layout = "~/Views/Shared/_BarangayOfficialLayout.cshtml";
    else
        Layout = "~/Views/Shared/_ResidentLayout.cshtml";
}

<div class="header">
    <h1>Crime Cases</h1>
</div>
<form action="/CrimeCases/GenerateReport" enctype="multipart/form-data" method="post">
    <div class="row clearfix">
        <div class="col-md-3">
            <input type="submit" class="btn btn-primary" value="Download">
            <input type="button" id="generate" class="btn btn-primary" value="Generate Report">
        </div>
    </div>
</form>
<table class="table crimeCasesTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Crime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(x => x.Status))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Crime.CrimeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Longitude)
                </td>
                <td>
                    @if (item.Status != ReportStatus.Approve && item.Status != ReportStatus.Rejected)
                    {
                        <a href="/CrimeCases/Approve?crimeCasesId=@item.CrimeCasesId" data-toggle="tooltip" title="Approved"><i class="fa fa-thumbs-up fa-lg"></i></a>
                    }
                    <a asp-action="Delete" asp-route-id="@item.CrimeCasesId" data-toggle="tooltip" title="Delete" class="text-danger ml-1" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash-alt fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $('.crimeCasesTable').DataTable({
            dom: "<'row'<'col-sm-6 col-md-6'><'col-sm-12 col-md-6'f>>" +
                "<'row'<'col-sm-12 no-bottom-margin'rt>>" +
                "<'row'<'col-sm-6 col-md-6'li><' col-sm-12 col-md-6'p>>",
            responsive: true,
            lengthChange: true,
            info: false,
            pagingType: "simple",
            autoWidth: false,
            columnDefs: [
                { targets: 4, width: '10%' },
                { targets: 4, orderable: false }
            ],
            order: []
        });
    });

    $(document).ready(function () {
        $("#generate").click(function () {
            window.location.href = '/CrimeCases/GenerateCrimeCases';
        });
    });
</script>
