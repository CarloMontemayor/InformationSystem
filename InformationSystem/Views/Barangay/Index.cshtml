@model IEnumerable<InformationSystem.Data.Entity.Barangay>

@{
    ViewData["Title"] = "Index";
}

<div class="header">
    <h1>Barangay</h1>
</div>
<a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="fa fa-plus-square"></i>Create New</a>
<table class="table barangayTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BarangayName)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BarangayName)
                </td>
                <td>
                    <a href="/BarangayOfficial/Index?barangayId=@item.BarangayId" data-toggle="tooltip" title="View Barangay Users"><i class="fa fa-sitemap fa-lg"></i></a>
                    <a href="/Barangay/GenerateHealth?barangayId=@item.BarangayId" data-toggle="tooltip" title="Download Health Cases"><i class="fa fa-download fa-lg"></i></a>
                    <a href="/Barangay/GenerateCrime?barangayId=@item.BarangayId" data-toggle="tooltip" title="Download Crime Cases"><i class="fa fa-cloud-download-alt fa-lg"></i></a>
                    <a asp-action="AddOrEdit" asp-route-id="@item.BarangayId" data-toggle="tooltip" title="Edit"><i class="fa fa-edit fa-lg"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.BarangayId" data-toggle="tooltip" title="Delete" class="text-danger ml-1" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash-alt fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $('.barangayTable').DataTable({
            dom: "<'row'<'col-sm-6 col-md-6'><'col-sm-12 col-md-6'f>>" +
                "<'row'<'col-sm-12 no-bottom-margin'rt>>" +
                "<'row'<'col-sm-6 col-md-6'li><' col-sm-12 col-md-6'p>>",
            responsive: true,
            lengthChange: true,
            info: false,
            pagingType: "simple",
            autoWidth: false,
            columnDefs: [
                { targets: 1, width: '20%' },
                { targets: 1, orderable: false }
            ]
        });
    });
</script>
