@model InformationSystem.Data.Entity.Barangay

@{
    ViewData["Title"] = "Create";
}

@if (Model.BarangayId != 0)
{
    <h1>Update @Model.BarangayName</h1>
}
else
{
    <h1>Create Barangay</h1>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BarangayId" />
            <div class="form-group">
                <label asp-for="BarangayName" class="control-label"></label>
                <input asp-for="BarangayName" class="form-control" />
                <span asp-validation-for="BarangayName" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
