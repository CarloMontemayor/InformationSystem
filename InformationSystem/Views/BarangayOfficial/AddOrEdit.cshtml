@model InformationSystem.Data.Entity.BarangayOfficial
@using InformationSystem.Data.Enum
@{
    ViewData["Title"] = "Create";
}

@if (Model.BarangayOfficalId != 0)
{
    <h1>Update @Model.User.Name</h1>
}
else
{
    <h1>Create Barangay Official</h1>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BarangayOfficalId" />
            <input type="hidden" asp-for="BarangayId" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="@ViewBag.Users">
                    <option selected="selected" value="">--Please select--</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <select asp-for="Position" class="form-control" asp-items="Html.GetEnumSelectList<BarangayPosition>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfService" class="control-label"></label>
                <input asp-for="YearOfService" class="form-control" />
                <span asp-validation-for="YearOfService" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
