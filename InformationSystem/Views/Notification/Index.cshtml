@model IEnumerable<InformationSystem.Data.Entity.Notification>

@{
    Layout = "~/Views/Shared/_ResidentLayout.cshtml";
    ViewData["Title"] = "Index";
}

<div class="header">
    <h1>Notification</h1>
</div>
<table class="table eventTable">
    <thead>
        <tr>
            <th>
                Notification
            </th>
            <th>
                Date Time
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.NotificationId" data-toggle="tooltip" title="Delete" class="text-danger ml-1" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>


<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $('.eventTable').DataTable({
            dom: "<'row'<'col-sm-6 col-md-6'><'col-sm-12 col-md-6'f>>" +
                "<'row'<'col-sm-12 no-bottom-margin'rt>>" +
                "<'row'<'col-sm-6 col-md-6'li><' col-sm-12 col-md-6'p>>",
            responsive: true,
            lengthChange: true,
            info: false,
            pagingType: "simple",
            autoWidth: false,
            columnDefs: [
                { targets: 2, width: '10%' },
                { targets: 2, orderable: false }
            ]
        });
    });
</script>