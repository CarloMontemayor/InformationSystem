@model IEnumerable<InformationSystem.Data.Dto.CrimeCasesMapDto>
@{
    ViewData["Title"] = "Crime Cases Map";
    if (ViewBag.IsAdmin)
        Layout = "~/Views/Shared/_Layout.cshtml";
    else if (ViewBag.IsBarangayOfficial)
        Layout = "~/Views/Shared/_BarangayOfficialLayout.cshtml";
    else
        Layout = "~/Views/Shared/_ResidentLayout.cshtml";
}
<link href="~/css/Map.css" rel="stylesheet" />
<script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>

<h2>Crime Cases Map</h2>
<br />
<br />
<div class="row w-100">
    <div class="col-md-3">
        <table class="table crimeCasesTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        Cases
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-9">
        <div id="map"></div>
    </div>
</div>
<br />
<br />
<script src="~/js/CrimeCasesMap/Index.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAGLMKYD9_T-Dzko-u_dSgqUPPFM3lje68&callback=initMap&libraries=&v=weekly&channel=2"
        async></script>


