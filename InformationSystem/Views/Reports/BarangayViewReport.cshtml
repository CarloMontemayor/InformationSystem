@model IEnumerable<InformationSystem.Data.Entity.Reports>
@using InformationSystem.Data.Enum
@{
    Layout = "~/Views/Shared/_BarangayOfficialLayout.cshtml";
    ViewData["Title"] = "Index";
}

<div class="header">
    <h1>Documents</h1>
</div>
<form action="/Reports/BarangayViewReport" enctype="multipart/form-data" method="post">
    <div class="row clearfix">
        <div class="col-md-1">
            <label>Status:</label>
        </div>
        <div class="col-md-3">

            <select id="status" name="status" class="form-control" asp-items="Html.GetEnumSelectList<ReportStatus>()">
            </select>
        </div>
        <div class="col-md-3">
            <input type="submit" class="btn btn-primary" value="Search">
        </div>
    </div>
</form>

<table class="table reportTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReportType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateRequested)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReportType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateRequested)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reason)
                </td>
                <td>
                    @if (item.Status != ReportStatus.Approve && item.Status != ReportStatus.Rejected)
                    {
                        <a href="/Reports/Approve?reportId=@item.ReportsId" data-toggle="tooltip" title="Approved"><i class="fa fa-thumbs-up fa-lg"></i></a>
                    }
                    else
                    {
                        @if (item.ReportType == ReportType.BarangayClearance)
                        {
                            <a href="/Reports/GenerateClearance?reportId=@item.ReportsId" data-toggle="tooltip" title="Generate Clearance"><i class="fa fa-download fa-lg"></i></a>
                        }
                        else if (item.ReportType == ReportType.BarangayIndigency)
                        {
                            <a href="/Reports/GenerateIndigency?reportId=@item.ReportsId" data-toggle="tooltip" title="Generate Indegency"><i class="fa fa-cloud-download-alt fa-lg"></i></a>
                        }
                        else if (item.ReportType == ReportType.BarangayCertificate)
                        {
                            <a href="/Reports/GenerateCertificate?reportId=@item.ReportsId" data-toggle="tooltip" title="Generate Barangay Certificate"><i class="fa fa-cloud-download-alt fa-lg"></i></a>
                        }
                        else if (item.ReportType == ReportType.BarangayPermit)
                        {
                            <a href="/Reports/GenerateBusinessPermit?reportId=@item.ReportsId" data-toggle="tooltip" title="Generate Business Permit"><i class="fa fa-cloud-download-alt fa-lg"></i></a>
                        }
                        else if (item.ReportType == ReportType.BarangaySingle)
                        {
                            <a href="/Reports/GenerateSingle?reportId=@item.ReportsId" data-toggle="tooltip" title="Generate Certification of Singleness"><i class="fa fa-cloud-download-alt fa-lg"></i></a>
                        }


                    }

                    <a asp-action="BarangayDelete" asp-route-id="@item.ReportsId" data-toggle="tooltip" title="Delete" class="text-danger ml-1" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash-alt fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
        $('.reportTable').DataTable({
            dom: "<'row'<'col-sm-6 col-md-6'><'col-sm-12 col-md-6'f>>" +
                "<'row'<'col-sm-12 no-bottom-margin'rt>>" +
                "<'row'<'col-sm-6 col-md-6'li><' col-sm-12 col-md-6'p>>",
            responsive: true,
            lengthChange: true,
            info: false,
            pagingType: "simple",
            autoWidth: false,
            columnDefs: [
                { targets: 6, orderable: false }
            ]
        });
    });
</script>

